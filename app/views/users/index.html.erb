<div class="container">
  <h1>ACTIVE USERS</h1>
  <ul class = "users-list">
    <% @users.each do |user| %>
      <li class = "users-item">
        <div class = "user-container">
          <div class = "user-photo">
            <% if user.photo.present? %>
              <%= image_tag user.photo, alt: "User Photo", class: "user-photo" %>
            <% else %>
              <span>No photo</span>
            <% end %>
          </div class="user-details">
          <%= link_to user_path(user) do %>
            <div>
              <h2 class="user-name"><%= user.name %></h2>
              <p class="user-post-count">Number of posts: <%= user.post_counter %></p>
            </div>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>