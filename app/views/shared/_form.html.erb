<%= form_with model: @post, url: user_posts_path(current_user), method: :post, local: true, class: "form" do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "title" %>
  </div>

  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text, class: "text-area" %>
  </div>
  <div>
  <%= form.submit "Submit Post", class: "button" %>
  </div>
  
<% end %>